_pkgname=libxfce4ui
pkgname=${_pkgname}-patched
pkgver=4.16.1
pkgrel=1
pkgdesc="Commonly used Xfce widgets among Xfce applications"
arch=('x86_64')
url="https://www.xfce.org/"
license=('GPL2')
groups=('xfce4')
provides=($_pkgname)
conflicts=($_pkgname)
depends=('libxfce4util' 'gtk3' 'xfconf' 'libsm' 'startup-notification'
         'libgtop' 'libepoxy' 'hicolor-icon-theme')
makedepends=('git' 'xfce4-dev-tools' 'intltool' 'gobject-introspection' 'vala')
source=(git://github.com/andregoetz/$_pkgname#branch=$_pkgname-$pkgver-patched)
sha256sums=('SKIP')

build() {
  cd "$srcdir/$_pkgname"
  ./autogen.sh \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-static \
    --disable-debug
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make DESTDIR="$pkgdir" install
}
